sudo ./trafic_off.sh                                                  #BLOCK ALL TRAFFIC
                
sudo sh -c "iptables-save > /etc/iptables.ipv4.nat"              #to save the rules to the file /etc/iptables.ipv4.nat. 

#this operation for autostart blocking /etc/rc.local file with sudo nano /etc/rc.local and just above the line exit 0, add the following line: iptables-restore < /etc/iptables.ipv4.nat  

